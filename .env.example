# PostgreSQL Database URL
# Format: jdbc:postgresql://host:port/database
# For Supabase: jdbc:postgresql://db.<project-ref>.supabase.co:5432/<database-name>
DB_HOST=localhost
DB_PORT=5433
DB_NAME=codex
DB_USERNAME=postgres
DB_PASSWORD=postgres
SHOW_SQL=true
PORT=8080

# ── Hosted Redis ──────────────────────────────────────────────────
REDIS_PROTOCOL=redis
REDIS_HOST=your-redis-endpoint
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT Configuration
JWT_SECRET=your-256-bit-secret-key-change-this-in-production-must-be-at-least-256-bits-long
JWT_EXPIRATION=86400000

# Docker client configuration used by the app (docker-java)
# Windows Docker Desktop:
# EXECUTION_DOCKER_HOST=npipe:////./pipe/docker_engine
# Linux/Mac:
# EXECUTION_DOCKER_HOST=unix:///var/run/docker.sock
EXECUTION_DOCKER_HOST=npipe:////./pipe/docker_engine

# Execution Configuration
EXECUTION_TEMP_DIR=C:/temp/codex
EXECUTION_WORKER_COUNT=2

# CORS (comma-separated)
APP_CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# Logging
LOG_LEVEL=INFO
